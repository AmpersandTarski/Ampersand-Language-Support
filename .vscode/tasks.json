{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Ampersand check script",
            "type": "shell",
            "command": "ampersand ${file}",
            "problemMatcher": "$amp-err",
            "isBackground": true,
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Ampersand version",
            "type": "shell",
            "command": "ampersand --version",
            "problemMatcher": "$amp-err",
            "isBackground": false,
            "presentation": {
                "reveal": "always"
            },
            "group": "none"
        }
    ]
}
