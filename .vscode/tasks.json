{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Ampersand check script",
            "type": "shell",
            "command": "ampersand ${file}",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Ampersand version",
            "type": "shell",
            "command": "ampersand --version",
            "problemMatcher": {
                "owner": "ampersand",
                "fileLocation": ["absolute"],
                "pattern": [{
                        "regexp": "^In file +(.*) \\(line (\\d+), column (\\d+)\\):(\n.*)+$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "message": 0
                    },
                    {   "regexp": "^(Error).* in file +(.*) at line (\\d+) : (\\d+)\n  (.*)$",
                        "severity": 1,
                        "file": 2,
                        "line": 3,
                        "column": 4,
                        "message": 5
                  }]
            },
            "isBackground": false,
            "presentation": {
                "reveal": "always"
            },
            "group": "none"
        }
    ]
}
