{
    "name": "ampersand",
    "displayName": "Ampersand",
    "description": "Language support for Ampersand scripts (syntax coloring)",
    "version": "0.0.1",
    "publisher": "RieksJ",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Programming Languages", "Themes"
    ],
    "contributes": {
        "languages": [{
            "id": "ampersand",
            "aliases": ["Ampersand", "ADL", "Ampersand Definition Language"],
            "extensions": [".adl",".ifc",".pop"],
            "configuration": "./language-configuration.json"
            }],
        "grammars": [{
            "language": "ampersand",
            "scopeName": "source.ampersand",
            "path": "./syntaxes/ampersand.tmLanguage.json"
            }],
        "themes": [{
            "label": "Ampersand",
            "uiTheme": "vs-dark",
            "path": "./themes/Ampersand-color-theme.json"
            }]
        }
}