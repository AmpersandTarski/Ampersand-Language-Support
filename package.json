{
  "name": "language-ampersand",
  "displayName": "Ampersand (ADL) language support",
  "version": "0.1.0",
  "publisher": "AmpersandTarski",
  "description": "Language support for Ampersand scripts",
  "categories": [
    "Programming Languages",
    "Themes",
    "Snippets"
  ],
  "engines": {
    "vscode": "^1.25.1"
  },
  "activationEvents": [
    "onLanguage:ampersand"
  ],
  "icon": "./images/ampersandLogo.png",
  "license": "GPL-3.0",
  "homepage": "https://github.com/AmpersandTarski/Ampersand-Language-Support",
  "repository": {
    "type": "git",
    "url": "https://github.com/AmpersandTarski/Ampersand-Language-Support.git"
  },
  "bugs": {
    "url": "https://github.com/AmpersandTarski/Ampersand-Language-Support/issues"
  },
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Ampersand configuration",
      "properties": {
        "ampersand.indentationRules.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Set to 'true' to enable automatically increasing indent on newlines after '=', 'do', 'where' etc."
        }
      }
    },
    "languages": [
      {
        "id": "ampersand",
        "aliases": [
          "Ampersand",
          "ampersand",
          "ADL",
          "Ampersand Definition Language"
        ],
        "extensions": [
          ".adl",
          ".ifc",
          ".pop",
          ".docadl"
        ],
        "configuration": "./ampersand-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ampersand",
        "scopeName": "source.ampersand",
        "path": "./syntaxes/ampersand.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "Ampersand",
        "uiTheme": "vs-dark",
        "path": "./themes/Ampersand-color-theme.json"
      }
    ],
    "snippets": [
      {
        "language": "ampersand",
        "path": "./snippets/ampersand.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "compile": "tsc -watch -p ./",
    "test": "node ./node_modules/vscode/bin/test",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "typescript": "^2.6.1"
  },
  "devDependencies": {
    "@types/chai": "^4.0.5",
    "@types/mocha": "^2.2.44",
    "@types/node": "^10.5.5",
    "chai": "^4.1.2",
    "del": "^3.0.0",
    "gulp": "^4.0.0",
    "gulp-typescript": "^3.2.3",
    "mocha": "^4.0.1",
    "mochawesome": "^2.3.1",
    "vscode": "^1.1.18"
  },
  "author": "* Joosten"
}
