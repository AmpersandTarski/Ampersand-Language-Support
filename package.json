{
  "name": "language-ampersand",
  "displayName": "Ampersand (ADL) language support",
  "version": "0.2.16",
  "publisher": "AmpersandTarski",
  "description": "Language support for Ampersand scripts",
  "categories": [
    "Programming Languages",
    "Themes",
    "Snippets"
  ],
  "author": "Ampersand Tarski",
  "preview": false,
  "contributors": [
    {
      "name": "Rieks",
      "url": "https://github.com/RieksJ"
    },
    {
      "name": "Han Joosten",
      "url": "https://github.com/hanjoosten",
      "email": "han.joosten.han@gmail.com"
    }
  ],
  "engines": {
    "vscode": "^1.25.1"
  },
  "activationEvents": [
    "onLanguage:ampersand"
  ],
  "icon": "images/ampersandLogo.png",
  "galleryBanner": {
    "color": "#f6a615",
    "theme": "light"
  },
  "license": "GPL-3.0",
  "homepage": "https://github.com/AmpersandTarski/Ampersand-Language-Support",
  "repository": {
    "type": "git",
    "url": "https://github.com/AmpersandTarski/Ampersand-Language-Support.git"
  },
  "bugs": {
    "url": "https://github.com/AmpersandTarski/Ampersand-Language-Support/issues"
  },
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Ampersand configuration",
      "properties": {
        "ampersand.indentationRules.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Set to 'true' to enable automatically increasing indent on newlines after '=', 'do', 'where' etc."
        }
      }
    },
    "languages": [
      {
        "id": "ampersand",
        "aliases": [
          "Ampersand",
          "ampersand",
          "ADL",
          "Ampersand Definition Language"
        ],
        "extensions": [
          ".adl",
          ".ifc",
          ".pop",
          ".docadl"
        ],
        "configuration": "./ampersand-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ampersand",
        "scopeName": "source.ampersand",
        "path": "./syntaxes/ampersand.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "Ampersand",
        "uiTheme": "vs-dark",
        "path": "./themes/Ampersand-color-theme.json"
      }
    ],
    "snippets": [
      {
        "language": "ampersand",
        "path": "./snippets/ampersand.json"
      }
    ],
    "commands": [],
    "problemMatchers": [
      {
        "name": "amp-err",
        "owner": "ampersand",
        "fileLocation": [
          "absolute"
        ],
        "pattern": [
          {
            "regexp": "^In file +(.*) \\(line (\\d+), column (\\d+)\\):(\n.*)+$",
            "file": 1,
            "line": 2,
            "column": 3,
            "message": 0
          },
          {
            "regexp": "^(Error).* in file +(.*) at line (\\d+) : (\\d+)\n  (.*)$",
            "severity": 1,
            "file": 2,
            "line": 3,
            "column": 4,
            "message": 5
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "compile": "tsc -watch -p ./",
    "testNew": "node ./node_modules/mocha/bin/mocha",
    "test": "node ./node_modules/vscode/bin/test",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.0.5",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.5.6",
    "chai": "^4.1.2",
    "del": "^3.0.0",
    "gulp": "^4.0.0",
    "gulp-typescript": "^5.0.0-alpha.3",
    "mocha": "^5.2.0",
    "mochawesome": "^3.0.3",
    "vscode": "^1.1.18"
  }
}
